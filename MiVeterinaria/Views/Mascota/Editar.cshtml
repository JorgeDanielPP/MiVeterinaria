@{
}
@model MiVeterinaria.Models.Mascota;
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <h2> Editar Mascotas</h2>
        <form asp-controller="Mascota" asp-action="Editar" method="post">
            <input asp-for="IdMascota" type="hidden" />
            <div class"nb-3">
                <label>Raza Mascota</label>
                <input class="form-control" asp-for="Raza" type="text" />
            </div>
            <div class"nb-3">
                <label>Edad Mascota</label>
                <input class="form-control" asp-for="Edad" type="text" />
            </div>
            <div class"nb-3">
                <label>Sexo Mascota</label>
                <input class="form-control" asp-for="Sexo" type="text" />
            </div>
            <div class"nb-3">
                <label>Nombre Mascota</label>
                <input class="form-control" asp-for="NombreMascota" type="text" />
            </div>
            <div class"nb-3">
                <label>Nombre Propietario</label>
                <input class="form-control" asp-for="NombrePropietario" type="text" />
            </div>
            <div class"nb-3">
                <label>Correo</label>
                <input class="form-control" asp-for="Correo" type="text" />
            </div>
            <div class"nb-3">
                <label>Telefono</label>
                <input class="form-control" asp-for="Telefono" type="text" />
            </div>
            <div class"nb-3">
                <label>Fecha Registro</label>
                <input class="form-control" asp-for="FechaRegisto" type="date" />
            </div>
            <div class"nb-3">
                <label>Activo</label>
                <input class="form-check-input" asp-for="Activo" type="checkbox" id="chkActivo" />
                <label class="form-check-label" for="chkActivo">Activo</label>
            </div>
            <div class="nb-3">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a asp-controller="Mascota" asp-action="Lista" class="btn btn-warning">Volver</a>
            </div>

        </form>


    </div>

</div>